# it may not be required for local JAVA and MAVEN environment
#

req_RULES_NAMES:=jak.macos mvn.macos
req_conf_RULES:=$(addprefix conf., $(req_RULES_NAMES))


.PHONEY: conf.jdk.macos conf.mvn.macos

conf.jdk.macos: 
	$(QUIET)echo ">>> Generating $(TOP)/configure/CONFIG_COMMON_JDK.local"
	$(QUIET)-rm -f $(TOP)/configure/CONFIG_COMMON_JDK.local
	$(QUIET)echo "JAVA_HOME:=/Library/Java/JavaVirtualMachines/openjdk17-zulu/Contents/Home"      > $(TOP)/configure/CONFIG_COMMON_JDK.local
	$(QUIET)echo "JAVA_PATH:=/Library/Java/JavaVirtualMachines/openjdk17-zulu/Contents/Home/bin" >> $(TOP)/configure/CONFIG_COMMON_JDK.local
	$(QUIET)cat -b $(TOP)/configure/CONFIG_COMMON_JDK.local

conf.mvn.macos: 
	$(QUIET)echo ">>> Generating CONFIG_COMMON_MAVEN.local"
	$(QUIET)-rm -f $(TOP)/configure/CONFIG_COMMON_MAVEN.local
	$(QUIET)echo "MAVEN_HOME:=/opt/local/share/java/maven3"      > $(TOP)/configure/CONFIG_COMMON_MAVEN.local
	$(QUIET)echo "MAVEN_PATH:=/opt/local/share/java/maven3/bin" >> $(TOP)/configure/CONFIG_COMMON_MAVEN.local
	$(QUIET)cat -b $(TOP)/configure/CONFIG_COMMON_MAVEN.local
